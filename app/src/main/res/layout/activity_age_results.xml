<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/activity_age_results"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="ch.ralena.extracredit.AgeResultsActivity">

	<TextView
		android:text="Here is your age in:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/textView8"
		android:textSize="36sp"/>

	<TextView
		android:text="Years:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="23dp"
		android:id="@+id/textView7"
		android:layout_below="@+id/textView8"
		android:layout_alignParentStart="true"
		android:textSize="24sp"/>

	<TextView
		android:text="Months:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="11dp"
		android:id="@+id/textView12"
		android:textSize="24sp"
		android:layout_below="@+id/textView7"
		android:layout_alignParentStart="true"/>

	<TextView
		android:text="Weeks:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="18dp"
		android:id="@+id/textView13"
		android:textSize="24sp"
		android:layout_below="@+id/textView12"
		android:layout_alignParentStart="true"/>

	<TextView
		android:text="Days:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="17dp"
		android:id="@+id/textView10"
		android:textSize="24sp"
		android:layout_below="@+id/textView13"
		android:layout_alignParentStart="true"/>

	<TextView
		android:text="Seconds:"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="17dp"
		android:id="@+id/textView14"
		android:textSize="24sp"
		android:layout_below="@+id/textView10"
		android:layout_alignParentStart="true"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/textView7"
		android:layout_centerHorizontal="true"
		android:id="@+id/yearsTextView"
		android:textSize="18sp"
		android:textColor="@android:color/holo_blue_dark"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/monthsTextView"
		android:textSize="18sp"
		android:textColor="@android:color/holo_blue_dark"
		android:layout_alignTop="@+id/textView12"
		android:layout_alignStart="@+id/yearsTextView"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/weeksTextView"
		android:textSize="18sp"
		android:textColor="@android:color/holo_blue_dark"
		android:layout_alignTop="@+id/textView13"
		android:layout_alignStart="@+id/monthsTextView"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/daysTextView"
		android:textSize="18sp"
		android:textColor="@android:color/holo_blue_dark"
		android:layout_alignTop="@+id/textView10"
		android:layout_alignStart="@+id/weeksTextView"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/secondsTextView"
		android:textSize="18sp"
		android:textColor="@android:color/holo_blue_dark"
		android:layout_alignTop="@+id/textView14"
		android:layout_alignStart="@+id/daysTextView"/>
</RelativeLayout>
